<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/yc_dialog_margin"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/circle_bg_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialogTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/half_top_circle_bg_white"
        android:gravity="center"
        android:paddingTop="@dimen/yc_dialog_margin_small"
        android:paddingBottom="@dimen/yc_dialog_margin_small"
        android:text="这是标题" />

    <TextView
        android:id="@+id/dialogContentTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="48dp"
        android:text="这是内容" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialogButtonLeftTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/divider_line" />

        <TextView
            android:id="@+id/dialogButtonRightTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消" />
    </LinearLayout>
</LinearLayout>
